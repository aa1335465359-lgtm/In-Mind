
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"]
  },
  "include": [
    "App.tsx",
    "index.tsx",
    "types.ts",
    "api/**/*.ts",
    "hooks/**/*.ts",
    "services/ai.ts",
    "services/encryption.ts",
    "services/gemini.ts",
    "services/storage.ts",
    "services/supabase.ts",
    "components/StealthLayer.tsx",
    "components/JournalUI.tsx",
    "components/ChatRoom.tsx",
    "components/LockScreen.tsx",
    "components/DevConsole.tsx",
    "components/journal/**/*.tsx",
    "components/chat/**/*.tsx"
  ],
  "exclude": ["node_modules", "vite.config.ts", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
